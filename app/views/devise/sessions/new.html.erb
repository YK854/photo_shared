<div class="row justify-content-center pb-3">
  <div class="col-sm-9">
    <div class="text-center">
      <h2>ユーザーログイン</h2>
    </div>
    <div class="form-body pt-4">
      <%= form_with(model:[@user], url: user_session_path, local: true) do |f| %>
        <!--メールアドレス入力欄-->
        <div class="form-group row justify-content-center">
          <div class="col-sm-2 p-0">
          <%= f.label :email, class: "control-label" %>
          </div>
          <div class="col-xs-4 ">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <!--パスワード入力-->
        <div class="form-group row justify-content-center">
          <div class="col-sm-2 p-0">
            <%= f.label :password, class: "control-label" %>
          </div>
          <div class="col-xs-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="d-flex justify-content-center ml-3 ">
          <%= f.submit "ログイン", class: "btn btn-outline-primary" %>
          <div class="pl-3 pt-1">
            <%= link_to "ユーザー登録", new_user_registration_path, class: "text-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>