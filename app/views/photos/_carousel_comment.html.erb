<div class="text-center mb-3">
  <div class="h4 m-0 pb-2">
    <i class="bi bi-chat-dots-fill color-commment pr-1"></i>
    コメント数上位
  </div>
  
  <div id="comment_slide" class="carousel slide" data-ride="false"  data-interval="5000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="card border-card in-shadow mb-3">
          <div class="row no-gutters p-1">
            <div class="col-sm-12 col-lg-7">
              <%= link_to photo_path(photo_comment_active) do %>
                <%= attachment_image_tag(photo_comment_active, :picture, :fill, 250, 250, class: "bd-placeholder-img card-img-top h-100") %>
              <% end %>
            </div>
            <div class="col-sm-12 col-lg-5 card-content">
              <div class="card-body pb-0">
                <h5 class="card-title"><%= photo_comment_active.title %></h5>
                <p class="card-text"><%= photo_comment_active.description %></p>
                <h4 class="card-text mt-5"><%= render "/photos/like_comment_count", photo: photo_comment_active %></h4>
                <p class="card-text"><small class="text-muted">投稿日:<%= photo_comment_active.created_at.strftime("%Y年%m月%d日") %></small></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <% photo_comment.each do |comment| %>
        <div class="carousel-item">
          <div class="card border-card in-shadow mb-3">
            <div class="row no-gutters p-1">
              <div class="col-sm-12 col-lg-7">
                <%= link_to photo_path(comment) do %>
                  <%= attachment_image_tag(comment, :picture, :fill, 250, 250, class: "bd-placeholder-img card-img-top h-100") %>
                <% end %>
              </div>
              <div class="col-sm-12 col-lg-5 card-content">
                <div class="card-body pb-0">
                  <h5 class="card-title"><%= comment.title %></h5>
                  <p class="card-text"><%= comment.description %></p>
                  <h4 class="card-text mt-5"><%= render "/photos/like_comment_count", photo: comment %></h4>
                  <p class="card-text"><small class="text-muted">投稿日:<%= comment.created_at.strftime("%Y年%m月%d日") %></small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <a class="carousel-control-prev" href="#comment_slide" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#comment_slide" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    
  </div>
  
</div>