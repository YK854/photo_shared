<div class="row justify-content-center pb-3">

  <div class="col-sm-5">

    <!--投稿削除ボタン-->
    <%= render "delete_btn", photo: @photo %>

    <%= attachment_image_tag(@photo, :picture, :fill, 400, 400, class: "img-thumbnail shadow") %>
    <div class="mt-3 ml-2">
      <%= link_to user_path(@photo.user), class: "btn btn-light p-0 m-0 rounded-circle" do %>
        <%= attachment_image_tag(@photo.user, :image, :fill, 60, 60, fallback: "person-circle.svg", size: "60x60", class: "rounded-circle") %>
      <% end %>
      <div class="d-inline-block align-middle text-center mx-5 h5">
        <h4>
          <%= link_to user_path(@photo.user), class: "badge badge-pill badge-light" do %>
            <%= @photo.user.name %>
          <% end %>
        </h4>
        <!--いいね｜コメント-->
        <%= render "like_comment_count", photo: @photo %>
      </div>
      <!--いいねボタン-->
      <%= render "posted_like", photo: @photo %>
      <!--コメント入力欄-->
      <%= render "comment_entry", photo: @photo, comment: @comment %>
    </div>
  </div>

  <div class="col-sm-4">
    <!--写真詳欄-->
    <%= render "photo_detail", photo: @photo %>
    <!--コメント一覧-->
    <%= render "comment_index", photo: @photo %>
  </div>

  <div class="col-sm-3 border">
    <% if user_signed_in? %>
      <%= render "relationships/followings", user_followings: @user_followings %>
    <% end %>
  </div>
</div>

