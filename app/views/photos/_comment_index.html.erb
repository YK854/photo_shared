<div>
  <% photo.comments.each do |c| %>
    <div class="row my-2">
      <div class="col-sm-2 text-right">
        <%= attachment_image_tag(c.user, :image, :fill, 25, 25, fallback: "person-circle.svg", size: "25x25", class: "rounded-circle") %>
      </div>
      <div class="col-sm-10">
        <div class="border rounded-lg rounded-right px-3 py-2">
          <div class="h6">
            <%= c.user.name %>
          </div>
          <div class="text-break">
            <%= c.post_comment %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>