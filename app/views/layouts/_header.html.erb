<header class="py-2">
  <div class="container px-0 py-2">
    <nav class="navbar navbar-expand-lg navbar-light px-1">

      <%= link_to photos_path, class: "navbar-brand" do %>
        <%= image_tag "Shared.png"%>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">

        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item mr-1">
              <%= render "layouts/nav_user" %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: "nav-link" do %>
                <i class="bi bi-house-door-fill"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to photos_path, class: "nav-link" do %>
                <i class="bi bi-images"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_photo_path, class: "nav-link" do %>
                <i class="bi bi-send-fill"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="bi bi-door-closed-fill"></i> ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item mr-1">
              <%= link_to photos_path, class: "nav-link" do %>
                <i class="bi bi-images"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item mr-1">
              <%= link_to new_photo_path, class: "nav-link" do %>
                <i class="bi bi-send-fill"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "nav-link" do %>
                <i class="bi bi-door-open-fill"></i> ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
