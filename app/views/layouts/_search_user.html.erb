<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="form-inline justify-content-center">
    <div class="mx-1">
      <%= f.text_field :content, class: "form-control-sm border" %>
    </div>
      <%= f.hidden_field :model, value: "user" %>
    <div class="btn-group mt-1">
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),{}, class: "form-control form-control-sm"  %>
      <%= f.submit "検索", class: "btn btn-outline-info btn-sm" %>
    </div>
  </div>
<% end %>